# ==================================
# Spokojne Decyzje - Zmienne Środowiskowe
# ==================================

# ---------- Aplikacja ----------
NODE_ENV=development
API_ENV=development

# ---------- Konfiguracja API ----------
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# Frontend Web
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_TELEMETRY_DISABLED=1

# ---------- Baza Danych ----------
POSTGRES_USER=decisioncalm
POSTGRES_PASSWORD=change_me_in_production_strong_password_123
POSTGRES_DB=decisioncalm
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ---------- OpenAI ----------
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=60

# ---------- Redis (Opcjonalnie - dla cache i ograniczenia szybkości) ----------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_ENABLED=false

# ---------- Bezpieczeństwo ----------
SECRET_KEY=change_me_to_random_secret_key_min_32_chars_long
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# ---------- Logowanie ----------
LOG_LEVEL=INFO
LOG_FORMAT=json

# ---------- Ograniczenie Szybkości ----------
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=30

# ---------- Flagi Funkcji ----------
ENABLE_VECTOR_SEARCH=true
ENABLE_OBSERVABILITY=false

# ---------- Profile Docker ----------
# Użycie: docker compose --profile dev up
# Profile: dev, prod, observability
COMPOSE_PROFILES=dev
