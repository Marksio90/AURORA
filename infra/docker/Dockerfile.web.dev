FROM node:20-alpine

WORKDIR /app

# Install dependencies
RUN apk add --no-cache libc6-compat

# Copy package files
COPY apps/web/package*.json ./

# Install dependencies (including dev dependencies)
RUN npm install

# Copy app source
COPY apps/web/ .

# Expose port
EXPOSE 3000

# Development server with hot reload
CMD ["npm", "run", "dev"]
